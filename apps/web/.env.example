# =============================================================================
# REMEDARA WEB APP - ENVIRONMENT VARIABLES (EXAMPLE)
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (MongoDB Atlas)
# -----------------------------------------------------------------------------
DATABASE_URL="mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/remedara?retryWrites=true&w=majority"

# -----------------------------------------------------------------------------
# NEXTAUTH.JS AUTHENTICATION
# -----------------------------------------------------------------------------
# Generate a secret key with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# EMAIL SERVICE
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@remedara.com"
SENDGRID_API_KEY=""
RESEND_API_KEY=""

# -----------------------------------------------------------------------------
# SMS SERVICE
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# -----------------------------------------------------------------------------
# ENCRYPTION & SECURITY
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
PHI_ENCRYPTION_KEY="your-phi-encryption-key-here"
JWT_SECRET="your-jwt-secret-here"

# -----------------------------------------------------------------------------
# CLOUD STORAGE
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
